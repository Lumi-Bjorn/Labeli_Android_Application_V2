<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_add_member_text_view_title"
            style="@style/text_view_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_add_member_title" />

        <LinearLayout
            style="@style/layout_with_text_components"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/activity_add_member_float_label_last_name"
                    style="@style/float_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_add_member_last_name"
                    android:inputType="textCapWords|textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/activity_add_member_float_label_first_name"
                    style="@style/float_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_add_member_first_name"
                    android:inputType="textCapWords|textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/activity_add_member_float_label_email"
                    style="@style/float_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_add_member_email"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_button_validate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/activity_add_member_button_validate"
                style="@style/button_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_add_member_button" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>