<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_edit_project_text_view_title"
            style="@style/text_view_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_edit_project_title" />

        <LinearLayout
            style="@style/layout_with_text_components"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/activity_edit_project_float_label_name"
                    style="@style/float_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_edit_project_name"
                    android:inputType="textCapSentences" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_edit_project_text_view_type"
                    style="@style/text_view_field_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_edit_project_type" />

                <Spinner
                    android:id="@+id/activity_edit_project_spinner_type"
                    style="@style/component_under_text_view_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/activity_edit_project_float_label_author"
                    style="@style/float_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_edit_project_author" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_edit_project_text_view_status"
                    style="@style/text_view_field_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_edit_project_status" />

                <Spinner
                    android:id="@+id/activity_edit_project_spinner_status"
                    style="@style/component_under_text_view_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/activity_edit_project_float_label_description"
                    style="@style/float_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_edit_project_description" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_one_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/activity_edit_project_button_choose_image"
                    style="@style/button_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/activity_edit_project_button_choose_image" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_button_validate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/activity_edit_project_button_validate"
                style="@style/button_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_edit_project_button" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>